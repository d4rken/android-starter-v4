<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditTextPreference
        app:icon="@drawable/ic_email_24"
        app:key="core.device.label"
        app:summary="A device label"
        app:title="Device label" />

    <PreferenceCategory android:title="@string/settings_category_ui_label">

        <eu.darken.androidstarter.common.preferences.ListPreference2
            android:icon="@drawable/ic_theme_24"
            android:key="core.ui.theme.mode"
            android:title="@string/ui_theme_mode_setting_label"
            app:persistent="false"
            app:summary="@string/ui_theme_mode_setting_explanation" />

        <eu.darken.androidstarter.common.preferences.ListPreference2
            android:icon="@drawable/ic_palette_24"
            android:key="core.ui.theme.style"
            android:title="@string/ui_theme_style_setting_label"
            app:persistent="false"
            app:summary="@string/ui_theme_style_setting_explanation" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/settings_category_other_label">

        <CheckBoxPreference
            app:icon="@drawable/ic_spider_thread_24"
            app:key="debug.bugreport.automatic.enabled"
            app:summary="Automatically reports issues, e.g. details on the app crashes so I can fix figure out why and fix it."
            app:title="Automatic bug reports" />

    </PreferenceCategory>

</PreferenceScreen>